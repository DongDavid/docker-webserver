server {
    listen       80;
    server_name  _;
    root   /data/public;
    index  index.php index.html;
    access_log  off;
    location / {
        if (!-e $request_filename) {
            rewrite  ^(.*)$  /index.php?s=/$1  last;
        }
    }
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        #fastcgi_pass 127.0.0.1:9000;
        fastcgi_pass unix:/dev/shm/php-fpm.sock;
    }
}
