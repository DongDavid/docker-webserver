server {
    listen       80;
    server_name  localhost;
    root   /data/public;
    index  index.php index.html;
    access_log  off;
    location / {
		try_files $uri $uri/ /index.php?$query_string;
    }
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass 127.0.0.1:9000;
    }   
}